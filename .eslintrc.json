{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["standard", "plugin:import/recommended", "plugin:jsx-a11y/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "no-use-before-define": "off",
    "no-restricted-imports": ["error", { "patterns": ["^\\.\\./"] }],
    "import/no-unresolved": ["error", { "ignore": ["^src/"] }],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "gatsby",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@mui",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "src/**",
            "group": "parent"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react", "gatsby", "@mui"],
        "alphabetize": {
          "order": "asc"
        },
        "newlines-between": "always"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "standard",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "plugin:jsx-a11y/recommended",
        "prettier"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
      },
      "plugins": ["react", "react-hooks", "@typescript-eslint"],
      "settings": {
        "react": {
          "version": "detect"
        }
      },
      "rules": {
        "react/prop-types": "off"
      }
    }
  ]
}
